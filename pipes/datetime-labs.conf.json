{
  "_id": "datetime-labs",
  "type": "pipe",
  "source": {
    "type": "dataset",
    "dataset": "global-person"
  },
  "transform": {
    "type": "dtl",
    "rules": {
      "default": [
        ["copy", "_id"],
        ["copy", "rdf:type"],
        ["filter",
          ["in", "~:webshop:order", "_S.rdf:type"]
        ],
        ["add", "datetime_now_test",
          ["now"]
        ],
        ["add", "datetime_datetime_test1",
          ["datetime", "2015-07-28T09:46:00.12345Z"]
        ],
        ["add", "x1",
          ["datetime-parse", "%d.%m.%Y", "28.07.2015"]
        ],
        ["add", "orderPlaced_datetime",
          ["datetime-parse", "%Y-%m-%d %H:%M:%S", "_S.orderPlaced"]
        ],
        ["add", "orderplaced2",
          ["datetime-format", "%d.%m.%Y", "_T.orderPlaced_datetime"]
        ],
        ["add", "datetime_72hlater",
          ["datetime-plus", "hour", 72, "_T.orderPlaced_datetime"]
        ],
        ["add", "time_since_order",
          ["datetime-diff", "day", "_T.orderPlaced_datetime",
            ["now"]
          ]
        ]
      ]
    }
  }
}
